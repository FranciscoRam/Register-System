extends ../templates/default

block content
  div(class='row')
    div(class='col-md-3 col-md-offset-5')
      
      if message.length > 0
        div(class='alert alert-success' role='alert')= message


      div(class='panel planel-default')
        div(class='panel-heading')='Iniciar Sesion'
        div(class='panel-body')
          form(action='http://localhost:3000/auth/signin' method='post' autocomplete='off')
            div(class='form-group')
              label(for='email')='Email'
              input(type='email' name='username' id='email' placeholder='Email' class='form-control')
            
            div(class='form-group')
              label(for='password')='Password'
              input(type='password' name='password' id='password' placeholder='Password' class='form-control')
            button(type="submit" class='btn btn-default')= 'Ingresar'

      if authmessage.length > 0
        div(class='alert alert-danger' role='alert')= authmessage
